#
#  The machine (platform) identifier to append to the library names
#
SHELL = /bin/sh

PLAT = _LINUX
LAPACKLIBS = -llapack -lblas
#LAPACKLIBS = -llapack -lf77blas -lcblas -latlas
MATLABLIBS = -lmat -lmx
F2CLIB = -lg2c
MATLABBASE=/usr/local/pkg/matlab/
#MATLABBASE=/usr/local/matlab/
#MATLABBASE=/cygdrive/c/MATLAB701/

MATLABRUNLIBDIR=${MATLABBASE}/bin/glnx86
#MATLABRUNLIBDIR=${MATLABBASE}/bin/win32
MATLABLIBDIR=${MATLABBASE}/bin/glnx86
#MATLABLIBDIR=${MATLABBASE}/extern/lib/win32/gcc

MATLABINCLUDE=${MATLABBASE}/extern/include

INCLUDE = $(MATLABINCLUDE)

LD=g++
LDFLAGS = -L${MATLABLIBDIR} ${MATLABLIBS} ${LAPACKLIBS} ${F2CLIB} -lc -Xlinker -rpath -Xlinker ${MATLABRUNLIBDIR} 
CC=g++
CCFLAGS = -ggdb -DDBG -I$(INCLUDE) -D$(PLAT) -D_NDLMATLAB
#CCFLAGS = -O3 -I$(INCLUDE) -D$(PLAT) -D_NDLMATLAB
FC=g77
FCFLAGS = -funroll-all-loops -O3

